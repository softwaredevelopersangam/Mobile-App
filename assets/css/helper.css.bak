.container{
  width: 1100px;
  margin: 0 auto;
}

.row,
.row::after,
.row::before{
  clear: both;
  width: 100%;
  display: table;
}
a:hover,
a:focus,
a:active,
a:link{
  text-decoration: none;
}
ul li {
  display: inline-block;
  list-style: none;
}
.text-center{
  text-align: center !important;
}
.text-left{
  text-align: left !important;
}
.text-right{
  text-align: right !important;
}
