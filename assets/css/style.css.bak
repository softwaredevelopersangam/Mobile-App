*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
.heroimage{
	background-color:#e3625a;
	padding-top:45px;
}
.navbar li a{
	font-size:16px;
	color:#ffffff;
	text-transform:uppercase;
	padding:15px 10px 0;
	margin:0 10px;
	display:inline-block;
	position:relative;
}
.navbar li a:hover{
	background-color:#ffffff;
	height:2px;
	position:absolute;
}